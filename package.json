{
    "name": "chateau-nombres",
    "private": true,
    "version": "2.0.0",
    "description": "Application web permettant de conduire des activités de structuration des nombres",
    "type": "module",
    "base": ".",
    "scripts": {
        "dev": "vite",
        "optimize-images": "node scripts/optimize-images.js",
        "generate-icons": "node scripts/generate-icons.js",
        "build": "npm run optimize-images && vite build",
        "preview": "vite preview",
        "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "analyze": "vite-bundle-visualizer"
    },
    "keywords": [
        "école",
        "primaire",
        "maths",
        "ermel",
        "structuration des nombres",
        "château des nombres"
    ],
    "author": "Frédéric MISERY <webmaster@micetf.fr> (https://micetf.fr/)",
    "license": "MIT",
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-draggable": "^4.4.6",
        "react-markdown": "^10.1.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "eslint": "^8.56.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "postcss": "^8.4.35",
        "sharp": "^0.33.2",
        "tailwindcss": "^3.4.1",
        "terser": "^5.29.0",
        "vite": "^5.1.0",
        "vite-bundle-visualizer": "^1.0.1",
        "vite-imagetools": "^6.2.8",
        "vite-plugin-pwa": "^0.17.5"
    }
}
